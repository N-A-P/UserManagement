<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mockproject.du1.mapper.EmailMapper">



	<!--Get List Data User Information -->
	<resultMap id="GetEmailResultMap"
		type="com.mockproject.du1.model.Email">
		<result property="emailId" column="email_id" />
		<result property="content" column="content" />
		<result property="subject" column="subject" />

	</resultMap>


	<insert id="sqlCreateEmailInsert" parameterType="com.mockproject.du1.model.Email" >
		<selectKey keyProperty="emailId" resultType="int">
			SELECT currval('"email_id_seq"')
		</selectKey>
		INSERT INTO public.Email
		(email_id,content,subject)
		VALUES
		(nextval('email_id_seq'),#{content},#{subject})
	</insert>

	<select id="sqlGetAllEmailSelect"
			resultMap="GetEmailResultMap" >
		SELECT
		email_id,
		content,
		subject
		FROM
		public.Email

	</select>



</mapper>